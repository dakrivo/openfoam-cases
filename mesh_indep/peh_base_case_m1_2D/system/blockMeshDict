|   \\  /    A nd           | Website:  www.openfoam.com                      |
|    \\/     M anipulation  |                                                 |
\*---------------------------------------------------------------------------*/
FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale 0.0357142857142857142857142857142857142857142857142857142857142857142857142857;
H 1;
scf 28;
alpha 1;
Lx #calc "$scf*$H*(($alpha*3.858) + 5.142)";
Ly #calc "$scf*$H*3.036";
Lz #calc "$scf*$H*0.1";
//Lz #calc "$scf*$H*4.5";

nX 350;
nY 200;
nZ 1;

	
	
vertices
(

    (0  $scf  0)   // 0
    ($Lx  $scf  0)   // 1
    ($Lx $Ly   0)   // 2
    (  0 $Ly   0)   // 3

    (  0 $scf $Lz)   // 4
    ($Lx $scf $Lz)   // 5
    ($Lx $Ly $Lz)   // 6
    (  0 $Ly $Lz)   // 7

);

blocks
(
    hex (0 1 2 3 4 5 6 7) ($nX $nY $nZ) simpleGrading (1 ((0.5 0.5 100)(0.5 0.5 0.01)) 1)
);



edges #codeStream
{
    codeInclude
    #{
        #include "pointField.H"
        #include "mathematicalConstants.H"
		#include "Field.H"
    #};

    code
    #{
		const scalar H = 1;
		const scalar alpha = 1;
		const scalar scf = 28;
		//const scalar Lx = H*((alpha*3.858) + 5.142);
        const scalar xMin = 0;
        const scalar xMax = scf*9;
        const label nPoints = 1000;
        const scalar dx = (xMax - xMin)/scalar(nPoints - 1);

        os  << "(" << nl << "spline 0 1" << nl;
        pointField profile(nPoints, Zero);
		
		scalarField xa(nPoints, Zero);
	
		for (label i = 0; i < nPoints; ++i)
        {	
		scalar x = xMin + i*dx;
        profile[i].x() = x;
		xa[i] = x;
		}
		
		
        for (label i = 0; i < nPoints; ++i)
        {
            scalar x = profile[i].x();
			if (x > xMax/2) {profile[i].y() = profile[nPoints-i].y();}

            else if (x >= 0 && x < 9)
            {
                profile[i].y() = 
				min(scf,
                    scf
                  + 6.775070969851E-03*x*x
                  - 2.124527775800E-03*x*x*x
				  
				 );
            }
            else if (x >= 9 && x < 14)
            {
                profile[i].y() = 
                    25.07355893131
                  + 0.9754803562315*x
                  - 1.016116352781E-01*x*x
                  + 1.889794677828E-03*x*x*x;
            }
            else if (x >= 14 && x < 20)
            {
                profile[i].y() =
                    2.579601052357E+01
                  + 8.206693007457E-01*x
                  - 9.055370274339E-02*x*x
                  + 1.626510569859E-03*x*x*x;
            }
            else if (x >= 20 && x < 30)
            {
                profile[i].y() = 
                    4.046435022819E+01
                  - 1.379581654948E+00*x
                  + 1.945884504128E-02*x*x
                  - 2.070318932190E-04*x*x*x;
            }
            else if (x >= 30 && x < 40)
            {
                profile[i].y() = 
                    1.792461334664E+01
                  + 8.743920332081E-01*x
                  - 5.567361123058E-02*x*x
                  + 6.277731764683E-04*x*x*x;
            }
            else if (x >= 40 && x < 54)
            {
                profile[i].y() = 
                    max
                    (
                        0,
                        5.639011190988E+01
                      - 2.010520359035E+00*x
                      + 1.644919857549E-02*x*x
                      + 2.674976141766E-05*x*x*x
                    );
            }
			else if ((x>54) && (x<=126)){
				profile[i].y() = 0;
			}
			
            profile[i].z() = 0;
        }
		for (label i = 0; i < nPoints; i++)
        {
        if ((xa[i]>=0) && (xa[i]<54)) {
            profile[i].x() *= alpha;}
        else if ((xa[i]>54) && (xa[i]<=126)) {
            profile[i].x() -=(54*(1-alpha));}
		else if ((xa[i]>126) && (xa[i]<=198)) {
            profile[i].x() -= (54*(1-alpha));}
        else if ((xa[i]>198)&& (xa[i]<=252)) {
			profile[i].x() -= (54*(1-alpha));
			profile[i].x() -= (xa[i]-198)*(1-alpha);}
		
		}
		
        os << profile << nl;

        os << "spline 4 5" << nl;
		for (label i = 0; i < nPoints; ++i)
        {
			profile[i].z() = 0.1*H*scf;
		}

        os << profile << nl;

        os  << ");" << nl;
    #};
};



boundary
(
    inlet
    {
        type            cyclic;
        neighbourPatch  outlet;
        faces
        (
            (0 4 7 3)
        );
    }
    outlet
    {
        type            cyclic;
        neighbourPatch  inlet;
        faces
        (
            (1 2 6 5)
        );
    }
    top
    {
        type            wall;
        faces
        (
            (3 7 6 2)
        );
    }
    hills
    {
        type            wall;
        faces
        (
            (1 5 4 0)
        );
    }
    front
    {
        type            empty;
        faces
        (
            (0 3 2 1)
        );
    }
    back
    {
        type            empty;
        faces
        (
            (4 5 6 7)
        );
    }
);

mergePatchPairs
(
);

